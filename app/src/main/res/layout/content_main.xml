<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="splusteam.center.ota.ota_center.MainActivity"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:id="@+id/mainLayout">

    #ROM Version Card#

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/rom_informations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_toStartOf="@+id/textView3"
                        android:visibility="visible"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />

                    <TextView
                        android:id="@+id/textnumber"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="/*Show ROM*/"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/recoveryid_2"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textnumber"
                        android:layout_below="@+id/textnumber"
                        android:layout_marginTop="14dp"
                        android:text="/*Show Recovery Version*/"
                        android:textAlignment="center"
                        android:textColor="@color/cast_expanded_controller_background_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="16dp"
                        android:text="@string/you_are_curently_on"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Version : "
                        android:textColor="@color/cast_expanded_controller_background_color"
                        android:textSize="18sp"
                        android:layout_marginTop="14dp"
                        android:layout_below="@+id/recoveryid_2"
                        android:layout_toStartOf="@+id/textbuild"
                        android:layout_marginEnd="9dp" />

                    <TextView
                        android:id="@+id/textbuild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/recoveryid_2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="54dp"
                        android:text="a-v-v"
                        android:textColor="@color/cast_expanded_controller_background_color"
                        android:textSize="18sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/debug"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rom_informations"
                android:layout_marginTop="11dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/rom_informations"
                    android:layout_marginTop="12dp"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_toStartOf="@+id/textView2"
                        app:srcCompat="@android:drawable/ic_menu_info_details"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/your_device_are"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="24sp"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/textdevice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="/*Show Device*/"
                        android:textAllCaps="true"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/debug"
                android:layout_marginTop="11dp"
                android:layout_weight="3.02"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_update"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/cancel_update"
                        android:layout_alignBottom="@+id/cancel_update"
                        android:layout_alignStart="@+id/cancel_update"
                        android:clickable="true"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:nestedScrollingEnabled="false"
                        android:text="@string/update_button2"
                        android:textColor="@color/colorPrimary"
                        android:theme="@style/Platform.AppCompat" />

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="36dp"
                        android:visibility="invisible"
                        android:layout_below="@+id/textView26"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:id="@+id/cancel_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressBar1"
                        android:layout_centerHorizontal="true"
                        android:text="Cancel Download"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/progres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:visibility="invisible"
                        android:layout_marginBottom="9dp"
                        android:layout_alignBottom="@+id/progressBar1"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="App Devs isn't responsable for Dead SDCards , incomming unverified bugs , bootloops . All OTA Updates are tested!"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="9dp" />

                    <Button
                        android:id="@+id/go_to_Beta"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/button_update"
                        android:layout_centerHorizontal="true"
                        android:onClick="OnClick_beta"
                        android:text="Check Beta Program" />

                    <TextView
                        android:id="@+id/updatepost1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/go_to_Beta"
                        android:layout_below="@+id/go_to_Beta"
                        android:layout_marginTop="24dp"
                        android:text="Reminder : Update postponed!"
                        android:textAllCaps="false"
                        android:textColor="@color/cast_expanded_controller_background_color"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/imagepost1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/go_to_Beta"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="14dp"
                        android:layout_toStartOf="@+id/updatepost1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/ic_info_black_24dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
